%global pkg_name Crypto

%global common_summary Haskell %{pkg_name} library

%global common_description A %{pkg_name} library for Haskell.

Name:           ghc-%{pkg_name}
Version:        4.2.5.1
Release:        2%{?dist}
Summary:        %{common_summary}

Group:          System Environment/Libraries
# For a breakdown of the licensing, see ReadMe.tex
License:        BSD and GPL
# BEGIN cabal2spec
URL:            http://hackage.haskell.org/package/%{pkg_name}
Source0:        http://hackage.haskell.org/packages/archive/%{pkg_name}/%{version}/%{pkg_name}-%{version}.tar.gz
BuildRequires:  ghc-Cabal-devel
BuildRequires:  ghc-rpm-macros %{!?without_hscolour:hscolour}
# END cabal2spec

BuildRequires:  ghc-compiler
BuildRequires:  ghc-HUnit-devel
BuildRequires:  ghc-QuickCheck-devel

%description
%{common_description}


%package devel
Summary:        %{common_summary} development files
Requires:       ghc-compiler = %{ghc_version}
Requires(post): ghc-compiler = %{ghc_version}
Requires(postun): ghc-compiler = %{ghc_version}
Requires:       %{name} = %{version}-%{release}

%description devel
This package provides the Haskell %{pkg_name} library development files.


%prep
%setup -q -n %{pkg_name}-%{version}


%build
%ghc_lib_build


%install
%ghc_lib_install

# cleanup extra files
%{__rm} -f %{buildroot}%{_bindir}/HMACTest
%{__rm} -f %{buildroot}%{_bindir}/QuickTest
%{__rm} -f %{buildroot}%{_bindir}/RSATest
%{__rm} -f %{buildroot}%{_bindir}/SHA1Test
%{__rm} -f %{buildroot}%{_bindir}/SymmetricTest
%{__rm} -f %{buildroot}%{_bindir}/WordListTest
%{__rm} -f %{buildroot}/usr/share/%{pkg_name}-%{version}/CryptoHomePage.html


%post devel
%ghc_pkg_recache


%postun devel
%ghc_pkg_recache


%files -f %{name}.files
%doc ReadMe.tex
/usr/share/licenses/%{name}-%{version}/ReadMe.tex


%files devel -f %{name}-devel.files


